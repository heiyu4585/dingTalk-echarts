<view class="dtm-search-bar {{className}}" style="{{style}}" onTap="onItemTap">

    <view class="{{$cssName}}-wrap" >
        <view class="{{$cssName}}-icon {{ focus || value.length ? 'active': ''}}" >
            <icon type="icon_search_outlined" size="32"/>
        </view>
        <input class="{{$cssName}}-input {{className}} {{disabled?$cssName+'-input-disabled':''}}"  
            placeholderClass="placeholder-input"
            controlled  = "{{controlled}}"
            value       = "{{value}}"
            name        = "{{name}}"
            style       = "{{style}}"
            password    = "{{false}}"
            placeholder = "{{placeholder}}"
            disabled    = "{{disabled}}"
            maxlength   = "{{maxlength}}"
            focus       = "{{focus}}"
            type        = "search"

            onInput   = "onItemInput"
            onConfirm = "onItemConfirm"
            onFocus   = "onItemFocus"
            onBlur    = "onItemBlur"

        />
        <view class="{{$cssName}}-icon" onTap="onDmClearHook"  a:if="{{ !disabled && (value).length>0}}">
            <icon type="icon_eliminate_filled" size="32"/>
        </view>
    </view>
    <view class="{{$cssName}}-cancel-text" a:if="{{cancelText}}" onTap="onCancelTextTap">{{cancelText}}</view>
</view>
