<scroll-view class="dtm-crumbs {{className}}" style="{{style}}" scroll-x="{{true}}" scroll-into-view="{{breadcrumb.length - 1}}" scroll-with-animation="{{true}}">
  <block a:for="{{breadcrumb}}">
    <block a:if="{{index !== breadcrumb.length - 1}}">
      <view
        id="{{index}}"
        class="dtm-crumbs-item {{ index === 0 ? 'dtm-crumbs-item-first-child': '' }}"
        data-index="{{index}}"
        onTap="onItemTap">
        {{item}}
      </view>
      <!-- ç®­å¤´ -->
      <icon type="icon_right_arrow2_outlined" className="dtm-crumbs-arrow" size="24"/>
    </block>

    <block a:if="{{index === breadcrumb.length - 1}}">
      <view
        id="{{index}}"
        class="dtm-crumbs-item dtm-crumbs-item-last-child dtm-crumbs-silent"
        data-index="{{index}}" >
        {{item}}
      </view>
    </block>
  </block>
</scroll-view>
