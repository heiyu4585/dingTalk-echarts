.dtm-tabs {
  height: 48px;
  background-color: #ffffff;
  background-color: var(--common_fg_z1_color, #ffffff);
  border-bottom: 1px solid rgba(126, 134, 142, 0.16);
  border-bottom: 1px solid var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
.dtm-tabs::-webkit-scrollbar {
  display: none;
}
.dtm-tabs.fixed {
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
  z-index: 99;
  width: 100%;
}
.dtm-tabs.fixed .dtm-tab-bar-content-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.dtm-tabs.fixed .dtm-tab-bar-content-wrap .dtm-tabs-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  flex-basis: auto;
}
.dtm-tabs.fixed .dtm-tabs-item-inner {
  display: flex;
}
.dtm-tabs-flex {
  position: relative;
  display: flex;
  height: 48px;
}
.dtm-tabs-item {
  position: relative;
  flex: 1;
  height: 48px;
  overflow: hidden;
  text-align: center;
  color: rgba(23, 26, 29, 0.6);
  color: var(--common_level2_base_color, rgba(23, 26, 29, 0.6));
}
.dtm-tabs-item-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  display: -webkit-box;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  max-height: 38px;
  padding: 0 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  transform: translate(-50%, -50%);
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: var(--common_action_text_style__font-size, 14px);
  line-height: var(--common_action_text_style__line-height, 1.5);
  align-items: center;
  justify-content: center;
  height: 100%;
}
.dtm-tabs-item-inner-text {
  font-size: var(--common_action_text_style__font-size, 14px);
  line-height: var(--common_action_text_style__line-height, 1.5);
}
.dtm-tabs-item-badge .dtm-badge-dot {
  right: -4px;
}
.dtm-tabs-item-active {
  color: #171a1d;
  color: var(--common_level1_base_color, #171a1d);
  font-size: var(--common_action_bold_text_style__font-size, 14px);
  font-weight: bold;
  line-height: var(--common_action_bold_text_style__line-height, 1.5);
}
.dtm-tabs-item-disabled {
  color: var(--common_level4_base_color, rgba(23, 26, 29, 0.24));
}
.dtm-tabs-item-active-bottom {
  position: absolute;
  bottom: 4px;
  left: 50%;
  transform: translateX(-50%) scale(0.5);
  width: 40px;
  height: 6px;
  border-radius: 3px;
  background: #171a1d;
  background: var(--common_level1_base_color, #171a1d);
}
.dtm-tabs-content-wrap {
  margin-top: 1px;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  height: auto;
}
.dtm-tabs-content-swiper-wrap {
  overflow: hidden;
}
.dtm-tabs-content-wrap.fix {
  height: auto !important;
}
.dtm-tabs-slides {
  display: flex;
  transition-duration: 500ms;
}
.dtm-tabs-ink-bar {
  position: absolute;
  bottom: 4px;
  width: 40px;
  height: 6px;
  border-radius: 6px;
  background: #171a1d;
  background: var(--common_level1_base_color, #171a1d);
  transition: left 0.2s, left 0.2s, right 0.2s;
  transform: scale(0.5);
}
.dtm-tabs-auto-width {
  display: inline-block;
  box-sizing: border-box;
  max-width: 100%;
  padding: 0 16px;
  overflow-x: scroll;
  width: 100%;
}
.dtm-tabs-auto-width .dtm-tabs-flex {
  display: table-row;
}
.dtm-tabs-auto-width .dtm-tabs-item {
  display: table-cell;
}
.dtm-tabs-auto-width .dtm-tabs-item-inner {
  position: static;
  display: table-cell;
  max-width: 272px;
  height: 48px;
  text-align: center;
  vertical-align: middle;
  transform: none;
  overflow: hidden;
  white-space: nowrap;
}
.dtm-tabs-auto-width .dtm-tabs-item-inner.badge {
  margin-left: 0;
}
