.dtm-switch {
  position: relative;
  display: inline-block;
  width: 50px;
  height: 32px;
}
.dtm-switch-wrap {
  box-sizing: border-box;
  width: 50px;
  height: 32px;
  border-radius: 32px;
  z-index: 0;
  margin: 0;
  padding: 0;
  appearance: none;
  border: 0;
  background-color: rgba(126, 134, 142, 0.24);
  background-color: var(--common_line_hard_color, rgba(126, 134, 142, 0.24));
  transition: all 300ms;
}
.dtm-switch-wrap:before {
  content: ' ';
  position: absolute;
  left: 2px;
  top: 2px;
  width: 46px;
  height: 28px;
  border-radius: 28px;
  box-sizing: border-box;
  z-index: 1;
  transition: all 200ms;
  transform: scale(1);
}
.dtm-switch-wrap:after {
  content: ' ';
  position: absolute;
  top: 2px;
  left: 2px;
  z-index: 2;
  background-color: #ffffff;
  background-color: var(--common_white1_color, #ffffff);
  width: 28px;
  height: 28px;
  border-radius: 28px;
  transform: translate(0);
  transition: all 200ms;
  box-shadow: var(--common_box_shadow_s__box-shadow, 0px 1px 4px rgba(0, 0, 0, 0.16));
}
.dtm-switch-wrap.checked {
  background-color: #007fff;
  background-color: var(--theme_primary1_color, #007fff);
}
.dtm-switch-wrap.checked:before {
  transform: scale(0);
}
.dtm-switch-wrap.checked:after {
  transform: translateX(18px);
}
.dtm-switch-wrap.disabled {
  box-sizing: border-box;
  width: 50px;
  height: 32px;
  border-radius: 32px;
  z-index: 3;
  position: absolute;
  top: 0;
  left: 0;
}
.dtm-switch-wrap.disabled:after {
  background-color: rgba(255, 255, 255, 0.4);
  background-color: var(--common_white2_color, rgba(255, 255, 255, 0.4));
}
.dtm-switch-wrap.disabled.unchecked {
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
.dtm-switch-wrap.disabled.checked {
  background-color: rgba(0, 127, 255, 0.48);
  background-color: var(--theme_primary2_color, rgba(0, 127, 255, 0.48));
}
