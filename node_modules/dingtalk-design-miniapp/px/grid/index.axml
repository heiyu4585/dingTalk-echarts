<view class="dtm-grid dtm-grid-{{columnNum}} dtm-grid-{{layout}} {{className}}" style="{{style}}">
  <block a:for="{{list}}">
    <view
      style="width:{{100/(columnNum)}}%;"
      class="dtm-grid-item"
      onTap="onItemTap"
      data-index={{index}}
      key="grid-item-{{index}}"
    >
      <slot item="{{item}}">
        <view class="dtm-grid-item-wrapper">
          <view class="dtm-grid-icon-container">
            <image src="{{item.icon}}" class="dtm-grid-icon" mode="aspectFit" />
          </view>
          <view class="dtm-grid-text-wrapper">
            <text class="dtm-grid-text {{columnNum !== 2 &&(!item.desc || item.desc === '') ? 'dm-grid-text-line2': ''}}">{{item.text}}</text>
            <text	class="dtm-grid-desc" a:if="{{columnNum !== 2 && item.desc && item.desc !== ''}}">{{item.desc}}</text>
          </view>
        </view>
      </slot>
    </view>
  </block>
</view>