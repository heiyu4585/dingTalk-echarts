.dtm-radio-item .dtm-radio-icon-wrap {
  display: flex;
}
.dtm-radio-item-check-icon {
  min-width: 17px;
  color: rgba(23, 26, 29, 0.6);
  color: var(--common_level2_base_color, rgba(23, 26, 29, 0.6));
}
.dtm-radio-item-check-icon.show {
  opacity: 1;
}
.dtm-radio-item-check-icon.hide {
  opacity: 0;
}
.dtm-radio-item-check-icon.dtm-radio-icon-left {
  margin-right: 16px;
}
.dtm-radio-item.icon-left .dtm-list-item-border {
  left: 50px;
}
