.dtm-input {
  background-color: #ffffff;
  background-color: var(--common_fg_color, #ffffff);
  padding: 12px 16px;
  box-sizing: border-box;
}
.dtm-input.error {
  height: 100%;
}
.dtm-input-main-content.row {
  display: flex;
  flex-direction: row;
  align-items: start;
}
.dtm-input-main-content.row .dtm-input-inputwrap,
.dtm-input-main-content.row .dtm-input-textarea {
  margin-left: 34px;
}
.dtm-input-main-content.row .dtm-input-title {
  margin: 0;
}
.dtm-input-inputwrap {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}
.dtm-input-input {
  color: #171a1d;
  color: var(--common_level1_base_color, #171a1d);
  background-color: #ffffff;
  background-color: var(--common_fg_color, #ffffff);
}
.dtm-input-icon {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: rgba(23, 26, 29, 0.24);
  color: var(--common_level4_base_color, rgba(23, 26, 29, 0.24));
  margin-left: 23px;
}
.dtm-input-icon .clear-icon {
  width: 14px;
  height: 14px;
}
.dtm-input-icon .right-icon {
  width: 16px;
  height: 16px;
  margin-left: 13px;
}
.dtm-input-multiline .dtm-input-main {
  height: auto;
  min-height: 112px;
}
.dtm-input-title {
  position: relative;
  font-size: var(--common_h2_text_style__font-size, 18px);
  line-height: var(--common_h2_text_style__line-height, 1.4);
  color: #171a1d;
  color: var(--common_level1_base_color, #171a1d);
  margin-bottom: 2px;
  flex-shrink: 0;
}
.dtm-input-required-icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -9px;
  font-size: 12px;
  color: #ff5219;
  color: var(--common_red1_color, #ff5219);
}
.dtm-input-input {
  box-sizing: border-box;
  width: 100%;
  padding: 0;
  vertical-align: middle;
  font-size: var(--common_h2_text_style__font-size, 18px);
  line-height: var(--common_h2_text_style__line-height, 1.4);
  overflow: visible;
}
.dtm-input-textarea {
  height: auto;
}
.dtm-input-textarea.maxlength {
  padding-bottom: 20px;
}
.dtm-input-disabled .dtm-input-title {
  color: rgba(23, 26, 29, 0.4);
  color: var(--common_level3_base_color, rgba(23, 26, 29, 0.4));
}
.dtm-input-disabled .dtm-input-input {
  color: rgba(23, 26, 29, 0.4);
  color: var(--common_level3_base_color, rgba(23, 26, 29, 0.4));
}
.dtm-input-readonly-placeholder {
  color: rgba(23, 26, 29, 0.4);
  color: var(--common_level3_base_color, rgba(23, 26, 29, 0.4));
}
.dtm-input-error {
  font-size: var(--common_description_text_style__font-size, 14px);
  line-height: var(--common_description_text_style__line-height, 1.5);
  box-sizing: border-box;
  color: #ff5219;
  color: var(--common_red1_color, #ff5219);
  line-height: 16px;
  border-top: 1px solid #ff5219;
  border-top: 1px solid var(--common_red1_color, #ff5219);
  margin-top: 10px;
  padding-top: 8px;
}
.dtm-input-placeholder {
  margin-left: -3px;
}
.dtm-input .dtm-hidden-input {
  display: none;
}
