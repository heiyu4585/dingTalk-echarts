<view style="{{style}}" class="dtm-skeleton {{className}}">
  <view a:if="{{type === 'avatar'}}" class="dtm-skeleton-{{type}} dtm-skeleton-{{type}}-{{avatarType}} {{!animated || !animate ? '' : 'animate'}}" style="width: {{width || '36px'}}; height:{{height||'36px'}};"/>

  <view a:if="{{type === 'text'}}" style="width:{{width || textWidth || '100%'}};" class="dtm-skeleton-{{type}} {{!animated || !animate ? '' : 'animate'}}" />

  <view a:if="{{type === 'card'}}" class="dtm-skeleton-{{type}} {{!animated || !animate ? '' : 'animate'}}" style="height: {{height || '181px'}}"/>
</view>
