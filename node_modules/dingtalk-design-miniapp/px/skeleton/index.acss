.dtm-skeleton::-webkit-scrollbar {
  display: none;
}
@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0 50%;
  }
}
.dtm-skeleton .animate {
  background: linear-gradient(90deg, hsla(0, 0%, 74.5%, 0.2) 25%, hsla(0, 0%, 50.6%, 0.24) 37%, hsla(0, 0%, 74.5%, 0.2) 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
}
.dtm-skeleton-avatar {
  width: 36px;
  height: 36px;
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
.dtm-skeleton-avatar-circle {
  border-radius: 50%;
}
.dtm-skeleton-avatar-round {
  border-radius: var(--common_border_radius_s, 4px);
}
.dtm-skeleton-avatar-square {
  border-radius: 0;
}
.dtm-skeleton-text {
  width: 100%;
  height: 16px;
  border-radius: var(--common_border_radius_s, 4px);
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
.dtm-skeleton-card {
  width: 100%;
  height: 181px;
  border-radius: var(--common_border_radius_s, 4px);
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
