.dm-row {
  display: flex;
  flex-flow: row wrap;
}
.dm-row::before,
.dm-row::after {
  display: flex;
}
.dm-row-flex-top {
  align-items: flex-start;
}
.dm-row-flex-middle {
  align-items: center;
}
.dm-row-flex-bottom {
  align-items: flex-end;
}
.dm-row-flex-start {
  justify-content: flex-start;
}
.dm-row-flex-center {
  justify-content: center;
}
.dm-row-flex-end {
  justify-content: flex-end;
}
.dm-row-flex-space-between {
  justify-content: space-between;
}
.dm-row-flex-space-around {
  justify-content: space-around;
}
