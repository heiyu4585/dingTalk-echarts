<view class="dtm-popguide" style="{{style}}">
  <slot></slot>
  <view class="
    dtm-popguide-content 
    dtm-popguide-placement-{{placement}} "
    a:if="{{visible}}"
  >
    <view class="dtm-popguide-arrow"></view>
    <view class="dtm-popguide-inner">
      <block a:if="{{!$slots.content}}">
        <!-- dtm-popguide-img-text-item 图文卡片 --> 
        <view a:if="{{image || subtitle}}" class="dtm-popguide-img-text-item">
          <image a:if="{{image}}" class="dtm-popguide-img-text-item-img" src="{{image}}" mode="aspectFill"/>
          <view class="dtm-popguide-img-text-item-text-content">
              <view a:if="{{title}}" class="dtm-popguide-img-text-item-text-content-title">
                  {{title}}
              </view>
              <view a:if="{{subtitle}}" className="dtm-popguide-img-text-item-text-content-desc">
                  {{subtitle}}
              </view>
          </view>
          <view
              class="dtm-popguide-img-text-item-close"
              onTap="onCloseHook"
            >
              <icon
                type="close-thin"
                size="{{38}}"
              />
          </view>
        </view>
        <!-- dtm-popguide-text-item 文字卡片 --> 
        <view a:else class="dtm-popguide-text-item">
            <view class="dtm-popguide-text-item-text" >{{title}}</view>
            <view
              class="dtm-popguide-text-item-close"
              onTap="onCloseHook"
            >
              <icon
                type="close-thin"
                size="{{38}}"
              />
            </view>
        </view>
      </block>
      <block a:else>
        <slot name="content"></slot>
      </block>
    </view>
  </view>
</view>