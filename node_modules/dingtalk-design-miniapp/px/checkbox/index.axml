<import-sjs name="classnames" from="./index.sjs"/>

<view class="dtm-checkbox {{className}}">
  <view class="dtm-checkbox-wrap">
    <icon className="dtm-checkbox-icon
    {{
      classnames({
        'dtm-checkbox-icon-checkbox': (isChecked !== null ? (!indeterminate && !isChecked) : (!indeterminate && !checked)),
        'dtm-checkbox-icon-disabled': disabled && (isChecked !== null ? !isChecked : !checked),
        'dtm-checkbox-fill-disabled': disabled && (isChecked !== null ? isChecked : checked),
      })
    }}" 

    type="{{(isChecked !== null ? isChecked : checked) ? 'icon_achieve_filled' : indeterminate ? 'icon_reduce_filled' : 'icon_unselected_outlined'}}" 
    size="{{size}}"
    onDmTap="onItemChange" />
  </view>
</view>