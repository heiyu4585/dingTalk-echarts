<view class="dtm-swipe {{swiping ? 'dtm-swiping' : ''}} {{className}}">
  <block a:if="{{right.length > 0}}">
    <view class="dtm-swipe-right dtm-swipe-right-{{$id}}">
      <block a:for="{{right}}">
        <view
          class="dtm-swipe-btn dtm-swipe-btn-{{item.type}}"
          onTap="onItemClick"
          data-index="{{index}}"
          key="swipe-item-{{index}}"
        >
          {{item.text}}
        </view>
      </block>
    </view>
  </block>
  <view
    class="dtm-swipe-content"
    onTap="onTouchTap"
    onTouchStart="onTouchStart"
    onTouchEnd="onTouchEnd"
    onTouchMove="onTouchMove"
    data-type="content"
    style="-webkit-transform: translateX({{leftPos}}px); transform: translateX({{leftPos}}px);"  
  >
    <slot />
  </view>
</view>