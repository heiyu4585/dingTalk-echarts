.dtm-indicator {
  width: auto;
  margin: 8px 0;
}
.dtm-indicator-horizontal {
  height: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dtm-indicator-vertical {
  height: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dtm-indicator-dot {
  width: 6px;
  height: 6px;
  background: var(--common_level4_base_color, rgba(23, 26, 29, 0.24));
  border-radius: 3px;
  margin: 3px;
}
.dtm-indicator-dot-active {
  width: 8px;
  height: 8px;
  background: var(--common_action_icon_press_color, rgba(23, 26, 29, 0.4));
  border-radius: 4px;
  margin: 3px;
}
