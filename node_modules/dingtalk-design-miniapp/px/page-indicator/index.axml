<view class="dtm-indicator" style="{{style}}">
  <view class="dtm-indicator-{{direction}}">
    <view a:for="{{total}}" onTap="onTap" data-index="{{index}}">
      <view 
        class="{{index === current ? `dtm-indicator-dot-active ${activeClassName}` : 'dtm-indicator-dot'}} {{className}}" 
        >
      </view>
    </view>
  </view>
</view>