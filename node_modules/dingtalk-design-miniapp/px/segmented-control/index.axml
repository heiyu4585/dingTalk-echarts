<view
    class="dtm-segmented-control {{disabled ? 'dtm-segmented-control-disabled' : ''}} {{className}}"
    style="{{style}};display:{{widthType === 'full'? 'block' : 'inline-block'}}"
  >
  <view class="dtm-segmented-control-flex-container {{widthType === 'full'?'':'dtm-segmented-control-inline'}}">
    <block a:for="{{texts}}" key="{{index}}">
      <view
        data-index="{{index}}"
        class="dtm-segmented-control-item {{widthType === 'full'?'':'dtm-segmented-control-inline'}} {{index === active ?'dtm-segmented-control-item-active':''}} {{index === (texts.length - 1)?'dtm-segmented-control-item-last-child':''}} {{itemClassName}}"
        onTap="onItemTap">
        {{item}}
      </view>
      <view a:if="{{index !== texts.length - 1}}" class="dtm-segmented-control-item-separator"></view>
    </block>
  </view>
</view>