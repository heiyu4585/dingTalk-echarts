.dtm-picker-drawer .dtm-drawer-content {
  height: 50vh;
}
.dtm-picker-disabled .dtm-picker-placeholder {
  color: var(--common_level4_base_color, rgba(23, 26, 29, 0.24));
}
.dtm-picker-text,
.dtm-picker-placeholder {
  font-size: 14px;
  color: var(--common_level3_base_color, rgba(23, 26, 29, 0.4));
}
.dtm-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  color: var(--common_level1_base_color, #171a1d);
  position: relative;
}
.dtm-picker-header-title {
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 8rpx;
}
.dtm-picker-header-right {
  color: var(--theme_primary1_color, #007fff);
}
.dtm-picker-header::after {
  content: '';
  position: absolute;
  display: block;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  transform: scaleY(0.5);
  background-color: var(--common_line_hard_color, rgba(126, 134, 142, 0.24));
}
.dtm-picker-content-mask {
  background-image: none;
}
.dtm-picker-content-item {
  font-size: 34rpx;
  color: var(--common_level1_base_color, #171a1d);
}
.dtm-picker-content-item-no-result {
  color: var(--common_stamp_color, rgba(23, 26, 29, 0.03));
}
