<view class="dtm-radio-group {{className}}">
  <list>
      <slot a:if="{{$slots.header}}" slot="header" name="header" />
      <block
        a:if="{{ onDmChange || onDmExtraClick }}"
        a:for="{{radioListsData}}"
        a:for-item="radio"
        a:for-index="radioIndex"
        a:key="{{'radioLists' + radioIndex}}"
      >
        <radio-item 
          index="{{radioIndex}}"
          itemName="{{radio.itemName}}"
          checked="{{radio.isChecked}}"
          arrowType="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowType || arrowType || '')}}"
          arrowSize="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowSize || arrowSize || '')}}"
          disabled="{{radio.disabled || disabled}}"
          hasArrowIcon="{{radio.hasArrowIcon || hasArrowIcon}}"
          data="{{radio.data}}"
          onDmChange="onDmChange"
          onDmtraClick="onDmExtraClick"
        >
        </radio-item>
      </block>

      <block
        a:if="{{ onChange || onExtraTap}}"
        a:for="{{radioListsData}}"
        a:for-item="radio"
        a:for-index="radioIndex"
        a:key="{{'radioLists' + radioIndex}}"
      >
        <radio-item 
          index="{{radioIndex}}"
          itemName="{{radio.itemName}}"
          checked="{{radio.isChecked}}"
          arrowType="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowType || arrowType || '')}}"
          arrowSize="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowSize || arrowSize || '')}}"
          disabled="{{radio.disabled || disabled}}"
          hasArrowIcon="{{radio.hasArrowIcon || hasArrowIcon}}"
          data="{{radio.data}}"
          onChange="onItemChange"
          onExtraTap="onItemExtraTap"
        >
        </radio-item>
      </block>

      <slot a:if="{{$slots.footer}}" slot="footer" name="footer" />
  </list>
</view> 