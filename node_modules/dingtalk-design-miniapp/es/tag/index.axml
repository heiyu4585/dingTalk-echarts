<view
  a:if="{{!closed}}"
  style="{{style}}"
  class="dtm-tag-{{type}} dtm-tag-{{closable?'large':size}} dtm-tag {{className}}  {{checked?`dtm-tag-${type}-checked`:''}}"
>

  <view class="dtm-tag-content {{closable || type === 'large' ? 'd-f': '' }}">
  <!--icon-->
    <icon
        onDmTap="onItemTap"
        a:if="{{icon}}"
        type="{{icon}}"
        className="dtm-tag-icon"
      />

  <!--text-->
        
    <view class="dtm-tag-text" onTap="onItemTap">
      <slot>{{text}}</slot>
    </view>

  <!--close-->

    <block a:if="{{closable}}">
      <icon
        type="close"
        onDmTap="onItemClose"
        className="dtm-tag-close"
      />
    </block>

  </view>



</view>