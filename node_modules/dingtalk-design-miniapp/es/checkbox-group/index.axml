<view class="dtm-checkbox-group {{className}}">
  <list>
    <slot a:if="{{$slots.header}}" slot="header" name="header" />
    <block
      a:if="{{onDmChange !== null}}"
      a:for="{{checkboxListsData}}"
      a:for-item="checkbox"
      a:for-index="checkboxIndex"
      a:key="{{'checkboxLists' + checkboxIndex}}"
    >
      <checkbox-item
        index="{{checkboxIndex}}"
        itemName="{{checkbox.itemName}}"
        isChecked="{{checkbox.isChecked}}"
        disabled="{{checkbox.disabled || disabled}}"
        onDmChange="onDmChange"
        data="{{checkbox.data}}"
      />
    </block>

    <block
      a:if="{{onChange !== null}}"
      a:for="{{checkboxListsData}}"
      a:for-item="checkbox"
      a:for-index="checkboxIndex"
      a:key="{{'checkboxLists' + checkboxIndex}}"
    >
      <checkbox-item
        index="{{checkboxIndex}}"
        itemName="{{checkbox.itemName}}"
        isChecked="{{checkbox.isChecked}}"
        disabled="{{checkbox.disabled || disabled}}"
        onChange="onItemChange"
        data="{{checkbox.data}}"
      />
    </block>
    <slot a:if="{{$slots.footer}}" slot="footer" name="footer" />
  </list>
</view>