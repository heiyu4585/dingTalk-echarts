<view class="dtm-modal {{className}}" a:if="{{show}}" style="{{style}}" disable-scroll="{{disableScroll}}">
  <view class="dtm-modal-content {{hasInput? 'dtm-modal-dialog': ''}}">
    <slot name="modal-content">
      <view class="dtm-modal-img" a:if="{{topImage}}">
        <image class="dtm-modal-img-{{topImageSize}}" src="{{topImage}}"/>
      </view>
      <view class="dtm-modal-title {{topImage ? 'img-title': ''}}" a:if="{{title}}">{{title}}</view>
      <view class="dtm-modal-avatar-wrap" a:if="{{hasInput && avatarInfo.uid}}">
        <view class="dtm-modal-avatar">
          <open-avatar uid="{{avatarInfo.uid}}" size="normal" shape="square"/>
        </view>
        <view class="dtm-modal-avatar-nick">{{avatarInfo.nick}}</view>
      </view>
      <view class="dtm-modal-describe {{!title ? 'dtm-modal-describe-mtop':''}}" a:if="{{describe}}"><slot>{{describe}}</slot></view>
      <view class="dtm-modal-input-wrap" a:if="{{hasInput}}">
        <input 
          class="dtm-modal-input" 
          type="{{inputType}}" 
          placeholder="{{inputPlaceholder}}"  
          value="{{innerInputValue}}" 
          disabled="{{inputDisabled}}" 
          maxlength="{{inputMaxlength}}" 
          onInput="onDmInputHook" 
          focus="{{inputFocus}}" 
        />
        <view class="dtm-modal-delete-icon" onTap="onDmClearHook"  a:if="{{!inputDisabled && hasValue}}">
          <icon type="close-fill" size="32"/>
        </view>
      </view>
    </slot>
    <view class="dtm-modal-button-list {{buttonList.length <= 2 ? 'dtm-modal-button-list-row' : ''}}">
      <view  
        a:for="{{buttonList}}" 
        class="dtm-modal-button-item 
        {{(buttonList.length === 1 || item.isMainEvent) ? 'dtm-modal-button-item-main':''}} 
        {{item.isWaringEvent ? 'dtm-modal-button-item-waring':''}} 
        dtm-modal-button-item-{{buttonList.length <= 2 ?'row':'column'}} 
        {{buttonList.length == 2 ? 'dtm-modal-button-item-line':''}}  
        {{ activeIndex == index ? 'active' : ''}}" 
        key="{{item}}" 
        onTap="onTap" 
        data-index="{{index}}"
        onTouchStart="onDmBtnTouchStart"
        onTouchEnd="onDmBtnTouchEnd"
        onTouchCancel="onDmBtnTouchCancel"
        >
        {{item.name}}
      </view>
    </view>
  </view>
</view>

