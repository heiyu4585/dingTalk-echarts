.dtm-swipe {
  position: relative;
  overflow: hidden;
}
.dtm-swipe .dtm-list-item:active {
  background-color: #ffffff;
  background-color: var(--common_fg_z1_color, #ffffff);
}
.dtm-swipe-content {
  position: relative;
  transition: all 250ms;
}
.dtm-swiping .dtm-swipe-content {
  transition: none;
}
.dtm-swipe-right {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  right: 0;
  padding: 2rpx;
}
.dtm-swipe-btn {
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 0 32rpx;
  font-size: var(--common_paragraph_text_style__font-size, 17px);
  line-height: var(--common_paragraph_text_style__line-height, 1.6);
  color: #ffffff;
  color: var(--common_white1_color, #ffffff);
}
.dtm-swipe-btn-delete {
  background-color: #ff5219;
  background-color: var(--common_red1_color, #ff5219);
}
.dtm-swipe-btn-edit {
  background-color: #007fff;
  background-color: var(--common_blue1_color, #007fff);
}
.dtm-swipe-btn-more {
  background-color: rgba(23, 26, 29, 0.4);
  background-color: var(--common_level3_base_color, rgba(23, 26, 29, 0.4));
}
.dtm-swipe .dtm-list-item-hover:active {
  background: #ffffff;
  background: var(--common_bg_z1_color, #ffffff);
}
