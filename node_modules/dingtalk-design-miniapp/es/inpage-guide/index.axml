<view class="dtm-inpage-guide {{type==='blue' ? 'blue' : '' }}" a:if="{{visible}}">
  <view class="dtm-inpage-guide-icon-wrap" a:if="{{$slots.icon}}">
    <slot name="icon"></slot>
  </view>
  <view class="dtm-inpage-guide-content">
    <view class="dtm-inpage-guide-content-title">{{title}}</view>
    <view class="dtm-inpage-guide-content-desc">{{desc}}</view>
    <view class="dtm-inpage-guide-content-action" onTap="onItemActionTap" a:if="{{!!actionText}}">{{actionText}}</view>
  </view>
  <view class="dtm-inpage-guide-img" a:if="{{!!imgSrc}}">
    <image class="dtm-inpage-guide-image" src="{{imgSrc}}" />
  </view>
  <view a:if="{{!!closable}}" catchTap="onItemCloseTap">
    <icon type="icon_close_outlined" class="dtm-inpage-guide-close"></icon>
  </view>
</view>