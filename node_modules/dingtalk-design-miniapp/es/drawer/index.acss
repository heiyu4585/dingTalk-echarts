.dtm-drawer-content {
  position: fixed;
  background-color: #ffffff;
  background-color: var(--common_fg_z1_color, #ffffff);
  overflow: hidden;
}
.dtm-drawer-mask {
  display: none;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  background: var(--common_black2_color, rgba(0, 0, 0, 0.4));
  opacity: 0;
  pointer-events: none;
  overflow: hidden;
}
.dtm-drawer-left {
  transform: translateX(-100%);
  left: 0;
  top: 0;
  bottom: 0;
  border-radius: 0 8px 8px 0;
}
.dtm-drawer-right {
  transform: translateX(100%);
  right: 0;
  top: 0;
  bottom: 0;
  border-radius: 8px 0 0 8px;
}
.dtm-drawer-top {
  top: 0;
  width: 100vw;
  transform: translateY(-100%);
  border-radius: 0 0 8px 8px;
}
.dtm-drawer-bottom {
  left: 0;
  bottom: 0;
  width: 100vw;
  transform: translateY(100%);
  border-radius: 8px 8px 0 0;
}
.dtm-drawer.visible .dtm-drawer-content {
  transform: none;
}
.dtm-drawer.visible .dtm-drawer-mask {
  display: block;
  opacity: 1;
  pointer-events: auto;
}
.dtm-drawer.animated .dtm-drawer-content {
  transition: all 0.15s linear;
}
.dtm-drawer.animated .dtm-drawer-mask {
  transition: all 0.15s linear;
}
