<view
  class="dtm-drawer {{className}} {{visible ? 'visible' : ''}} {{ animated ? 'animated': '' }}"
  style="{{style}}"
  disable-scroll="{{disableScroll}}"
>
  <view
    class="dtm-drawer-mask"
    a:if="{{mask}}"
    style="z-index: {{zIndex}}"
    onTap="onMaskTap"
    disable-scroll="{{true}}"
  ></view>
  <view
    class="dtm-drawer-content dtm-drawer-{{position}}"
    style="z-index: {{zIndex}}"
  >
    <slot />
  </view>
</view>