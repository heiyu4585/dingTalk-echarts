<view
  a:if="{{onCatchTap || onDmCatchTap}}"
  catchTap="onBtnCatchTap"
  style="{{style}}"
  class="dtm-button {{className}}  dtm-button-{{type || 'default'}} dtm-button-size-{{size}} {{disabled ? 'dtm-button-disable':''}} {{loading?'dtm-button-loading':''}}"
>
  <button
    style="{{style}}"
    type="default"
    class="dtm-button-button"
    open-type="{{openType}}"
    form-type="{{formType}}"
    disabled="{{disabled}}"
  >
    <view a:if="{{loading}}" class="loading-wrap">
      <view
        class="dingtalk-icon dtm-button-loading-icon"
      >{{'\ue7ef'}}</view>
    </view>
    <view class="dtm-button-text"><slot></slot></view>
  </button>
</view>
<view
  a:else
  onTap="onBtnTap"
  style="{{style}}"
  class="dtm-button {{className}}  dtm-button-{{type || 'default'}} dtm-button-size-{{size}} {{disabled?'dtm-button-disable' : ''}} {{loading? 'dtm-button-loading' : ''}}"
>
  <button
    style="{{style}}"
    type="default"
    class="dtm-button-button"
    open-type="{{openType}}"
    form-type="{{formType}}"
    disabled="{{disabled}}"
  >
    <view a:if="{{loading}}" class="loading-wrap">
      <view
        class="dingtalk-icon dtm-button-loading-icon"
      >{{'\ue7ef'}}</view>
    </view>
    <view class="dtm-button-text"><slot></slot></view>
  </button>
</view>
