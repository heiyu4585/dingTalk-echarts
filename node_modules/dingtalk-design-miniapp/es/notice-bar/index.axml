<view
  a:if="{{showNotice}}"
  class="dtm-notice-bar dtm-notice-bar-{{type}} {{!!isCloseable ? 'dtm-notice-bar-closeable' : ''}} {{className}}"
  onTap="onItemTap">

  <view className="dtm-notice-bar-icon">
    <slot>
      <block a:if="{{iconType && iconType !== ''}}">
        <icon type="{{iconType}}"/>
      </block>

      <block a:else>
        <block a:if="{{type === 'info'}}">
          <icon className="dingtalk-icon" type="icon_hint_outlined"/>
        </block>

        <block a:if="{{type === 'warn'}}">
          <icon className="dingtalk-icon" type="icon_warning_outlined"/>
        </block>

        <block a:if="{{type === 'error'}}">
          <icon className="dingtalk-icon" type="icon_eliminate_outlined"/>
        </block>
      </block>
    </slot>
  </view>

  <view class="dtm-notice-bar-content {{!!isCloseable ?'dtm-notice-bar-closeable-content':''}}">
    <text class="dtm-notice-bar-content-text">{{value}}</text>
  </view>

  <view a:if="{{$slots.extra}}" className="dtm-notice-bar-extra" >
    <slot name="extra"></slot>
  </view>
  

  <view a:if="{{!!isCloseable}}" catchTap="onCloseTap">
    <view class="dingtalk-icon  dtm-notice-bar-close"> {{'\ue699'}}</view>
  </view>

</view>