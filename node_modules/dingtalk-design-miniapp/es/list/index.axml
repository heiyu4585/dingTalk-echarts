<view class="dtm-list {{className}}" style="{{style}}" onTap="onItemTap">
  <view a:if="{{$slots.header}}" class="dtm-list-header">
    <slot name="header" />
  </view>
  <view class="dtm-list-body">
    <slot />
  </view>
  <view a:if="{{$slots.footer}}" class="dtm-list-footer">
    <slot name="footer" />
  </view>
</view>