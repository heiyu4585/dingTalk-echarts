.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
.dtm-segmented-control {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  height: 56rpx;
}
.dtm-segmented-control-flex-container {
  display: flex;
  flex: 1;
  flex-direction: row;
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
  border-radius: var(--common_border_radius_s, 4px);
  padding: 4rpx;
  align-items: center;
}
.dtm-segmented-control-disabled {
  opacity: 0.4;
}
.dtm-segmented-control-item {
  font-size: var(--common_description_text_style__font-size, 14px);
  line-height: var(--common_description_text_style__line-height, 1.5);
  position: relative;
  box-sizing: border-box;
  display: inline-block;
  flex: 1;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  padding-right: 22rpx;
  padding-left: 22rpx;
  border-radius: var(--common_border_radius_s, 4px);
  color: #171a1d;
  color: var(--common_level1_base_color, #171a1d);
  text-align: center;
  justify-content: center;
  align-items: center;
  line-height: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
.dtm-segmented-control-item-separator {
  height: 24rpx;
  width: 2rpx;
  background-color: rgba(126, 134, 142, 0.16);
  background-color: var(--common_line_light_color, rgba(126, 134, 142, 0.16));
}
.dtm-segmented-control-item-last-child {
  border-right: none;
}
.dtm-segmented-control-item-active {
  box-shadow: var(--common_box_shadow_s__box-shadow, 0px 1px 4px rgba(0, 0, 0, 0.16));
  background-color: #ffffff;
  background-color: var(--common_bg_z1_color, #ffffff);
  transition: transform ease 0.5s;
}
.dtm-segmented-control-inline {
  flex: initial;
  justify-content: flex-start;
}
