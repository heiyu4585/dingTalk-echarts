<list-item
  className="dtm-radio-item {{className}} {{hasArrowIcon? 'icon-left':''}}"
  disabled="{{disabled}}"
  onArrowTap="onItemExtraTap"
  onTap="onItemChange"
  arrowType="{{hasArrowIcon ? arrowType : ''}}"
  arrowSize="{{hasArrowIcon ? arrowSize : ''}}"
  index="{{index}}"
> 
  <!-- 左侧对勾 -->
  <block a:if="{{hasArrowIcon}}">
    <view class="dtm-radio-icon-wrap">
      <icon type="icon_check_outlined" className="dtm-radio-item-check-icon  dtm-radio-icon-left {{isChecked || checked ? 'show' : 'hide'}}" ></icon>
      <view>{{itemName}}</view>
    </view>
    <slot name="extra" slot="mainLeft"></slot>
  </block>
  
  <!-- 右侧对勾 -->
  <view a:if="{{ !hasArrowIcon }}" slot="extra">
    <icon type="icon_check_outlined" className="dtm-radio-item-check-icon  dtm-radio-icon-left {{isChecked || checked ? 'show' : 'hide'}}" ></icon>
  </view>
  <block a:if="{{ !hasArrowIcon }}">
    <view>{{itemName}}</view>
  </block>
</list-item>