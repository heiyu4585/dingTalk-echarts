<view class="dtm-badge {{className}} {{!$slots.$default ? 'dtm-badge-not-a-wrapper': ''}}" style="{{style}}">
  <slot />
  <text
    class="dtm-badge-dot"
    a:if="{{show && !text}}" />
  <view
    a:elif="{{show && text != 0}}"
    class="dtm-badge-text {{ text.toString().length > 1 ? 'dtm-badge-text-multi' : '' }}">
    <view class="dtm-badge-text-box">
      {{ typeof text === 'number' && text > overflowCount ? overflowCount + '+'  : text}}
    </view>
  </view>
</view>