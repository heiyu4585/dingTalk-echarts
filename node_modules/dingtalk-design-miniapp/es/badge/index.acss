.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
.dtm-badge {
  position: relative;
  display: inline-block;
  line-height: 1;
  vertical-align: middle;
}
.dtm-badge-dot {
  display: inline-block;
  position: absolute;
  transform: translateX(70%) scale(0.5);
  transform-origin: center center;
  top: -15rpx;
  right: 8rpx;
  height: 32rpx;
  width: 32rpx;
  background-color: #ff5219;
  background-color: var(--common_red1_color, #ff5219);
  border-radius: 50%;
  z-index: 10;
}
.dtm-badge-not-a-wrapper .dtm-badge-text,
.dtm-badge-not-a-wrapper .dtm-badge-dot {
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: normal;
  top: auto;
  position: relative;
  transform: translateX(0);
}
.dtm-badge-not-a-wrapper .dtm-badge-text-box,
.dtm-badge-not-a-wrapper .dtm-badge-dot-box {
  margin-top: 0.5px;
}
.dtm-badge-not-a-wrapper .dtm-badge-dot {
  transform: translateX(0) scale(0.5);
}
.dtm-badge-text {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: var(--common_description_text_style__font-size, 14px);
  line-height: var(--common_description_text_style__line-height, 1.5);
  position: absolute;
  top: -12rpx;
  right: 0;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 100%;
  padding: 0;
  text-align: center;
  transform: translateX(50%);
  transform-origin: -10% center;
  z-index: 10;
  white-space: nowrap;
  color: #ffffff;
  color: var(--common_white1_color, #ffffff);
  background-color: #ff5219;
  background-color: var(--common_red1_color, #ff5219);
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: normal;
}
.dtm-badge-text-box {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-top: 0.5px;
}
.dtm-badge-text-multi {
  padding: 0 10rpx;
  border-radius: 18rpx;
}
